{
  "include": ["src/components", "src/pages", "src/global.d.ts"],
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react",
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  }
}
